    "micromatch": "^4.0.5",
    "node-watch": "^0.7.4",
    "picocolors": "^1.0.0",
    "qs": "^6.11.2",
    "readdirp": "^3.6.0",
    "urlpattern-polyfill": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/detect-port": "^1.3.3",
