  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "website-server": "bin/website-server.js"
  },
  "scripts": {
    "build": "rm -rf lib; tsc",
    "build:watch": "rm -rf lib; tsc --watch",
    "test:ts": "vitest --dir src --threads false --run",
